<div class='table-heading' aria-role="heading" aria-level="2">
  {{i18n (concat "filters." filter ".title")}}
</div>

{{#if topics}}
  {{#each topics as |t|}}
    {{latest-topic-list-item topic=t}}
  {{/each}}
  <div class="more-topics">
    {{#if isGroupCategoriesRoute}}
      {{#if linkToWatching}}
        <a href="{{get-url (concat 'activity/watching')}}" class="btn btn-default pull-right">{{i18n "more"}}</a>
      {{else}}
        <a href="{{get-url (concat 'activity/topics')}}" class="btn btn-default pull-right">{{i18n "more"}}</a>
      {{/if}}
    {{else}}
      <a href="{{get-url (concat '/' filter)}}" class="btn btn-default pull-right">{{i18n "more"}}</a>
    {{/if}}
  </div>
{{else}}
  <div class='no-topics'>
    <h3>{{i18n (concat "topics.none." filter)}}</h3>
  </div>
{{/if}}
